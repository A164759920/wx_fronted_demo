page{
  height: 100%;
  width: 100%;
}

.container{
  background-color:whitesmoke;

}

.background-pic{
  width: 100%;
  height: 280rpx;
  background-color:cornflowerblue;
}

.body{
  background-color: chartreuse;
  height: 374rpx;
  width: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
  .body .userAvater{
    position: absolute;
    background-color: crimson;
    width: 140rpx;
    height: 140rpx;
    top: -75rpx;
    left:calc(50% - 70rpx) ;
    border-radius: 50%;
  }

  .userinfo {
    position: absolute;
    top: 80rpx;
  } 
  .user-profile-bottom{
    margin-top: 15rpx;
    display: flex;
    width: 380rpx;
    height: 90rpx;
    justify-content: space-between;
    align-items: center;
  }

  .edit-userinfo{
    border: lightgrey 2rpx solid;
    border-radius: 30rpx;
    margin-top: 25rpx;
    width: 200rpx;
    margin-left: 90rpx;
    height: 50rpx;
    line-height: 50rpx;
  }

.content{
  background-color:whitesmoke;
  width: 100%;
  height: 100%;
  
}

  .content .naviBar{
    background-color: tomato;
    width: 100%;
    height: 60rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
  }


  .like-content{
    width: 100%;
    height: 300px;
    background-color:white
  }
    .like-content .defaultText{
      width: 100%;
      height: 90%;
      text-align: center;
      padding-top: 50rpx;
      color: gray;
    }

    .like-content .like-item{
      background-color:white;
      width: 100%;
      display: flex;
      flex-direction: column;
      padding-left: 20rpx;
      padding-right: 20rpx;
      margin-bottom: 20rpx;
    }

      .like-item .like-item-header{
        width: 100%;
        height:100rpx;
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        margin-bottom: 5rpx;
        position: relative;
      }

      .like-item-header .header-left{
        width: 350rpx;
        height: 80rpx;
        
        display: flex;
        line-height: 80rpx;
      }

        .header-left .left-avater{
          width: 80rpx;
          height: 80rpx;
          background-color: darkolivegreen;
          border-radius: 50%;
          
        }

        .header-left .left-username{
            margin-left: 8rpx;
        }

      .like-item-header .header-right{
        position: absolute;
        height: 80rpx;
        /* background-color: darkgrey; */
        right: 5px;
        text-align: right;
        line-height: 80rpx;
      }

    .like-item .like-item-body{
      /* background-color:darkgoldenrod; */
      width: 100%;
      flex-grow: 1;
    }

      .like-item-body .body-title{
        width: 100%;
        height: 50rpx;
        /* background-color: aqua; */
        line-height: 50rpx;
        font-weight: bolder;
        font-size: 17px;
      }

.body-content .body-content-text{
  background-color: whitesmoke;
  font-size: 15px;
  font-family: Arial, Helvetica, sans-serif;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}


.body-content-pic .picItem{
  width: 120rpx;
  height:120rpx;
  margin-right: 10rpx;
  background-color: black;
}

.like-item .like-item-footer{
  width: 100%;
  height:70rpx;
  display: flex;
  align-items: center;
  position: relative;
  padding: 10px;
}
.like-item-footer .footer-more{
  position: absolute;
  right: 10px;
}

.like-item-footer .footer-comment{
  margin-left: 80rpx;
}

.pubLikeItem{
  line-height: 35px;
  text-align: center;
  height: 35px;
  color:black;
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;
  background-color: chartreuse;
}
