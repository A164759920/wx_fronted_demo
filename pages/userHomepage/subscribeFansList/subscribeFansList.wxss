page{
  height: 100%;
  width: 100%;
}

.container{
  background-color:whitesmoke;
  width: 100%;
}

.list-item{
  width: 100%;
  height: 120rpx;
background-color: white;
  margin-bottom: 10rpx;
  display: flex;
}

.item-left{
  height: 100%;
  width: 130rpx;
  position: relative;
}
.left-avater{
  position: absolute;
  left: 15rpx;
  top: 10rpx;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  background-color: seagreen;
}

.item-medium{
  height: 100%;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-medium .username{
  font-size: 18px;
  margin-bottom: 5rpx;
}

.item-medium .userinfo{
  font-size: 13px;
  color: grey;
}

.item-right{
  height: 100%;
  width: 100rpx;
 position: relative;
 margin-right: 5px;
}

.remove-sub{
  top:40rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  position: absolute;
  border: lightgray solid 3rpx;
  border-radius: 5px;
  text-align: center;
}
